        android:textSize="30sp"
        />

    <Button
        android:id="@+id/button_x3"
        android:text="x^3"
        android:textAllCaps="false"
        android:layout_height="50sp"
        android:layout_marginLeft="3dp"
        android:background="#c0c0c0"
        android:layout_width="75sp"
