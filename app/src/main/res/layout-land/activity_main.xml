<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8"
    android:orientation="horizontal"
    android:rowCount="6"
    tools:context=".MainActivity">
    />
    <TextView
        android:id="@+id/input_text"
        android:layout_columnSpan="8"
        android:layout_gravity="fill"
        android:gravity="right|bottom"
        android:hint="input"
        android:textColor="#000000"
        android:textSize="35sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textStyle="bold"
        />
    <!--singleLine表示单行显示   ellipsize表示省略号放在最后显示 bold是加粗-->
    <Button
        android:id="@+id/button_ex"
        android:text="e^x"
        android:textAllCaps="false"
        android:layout_gravity="right|fill_horizontal"
        android:layout_marginLeft="3dp"
        android:layout_height="50sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_divx"
        android:text="1/x"
        android:textAllCaps="false"
        android:layout_marginLeft="3dp"
        android:layout_width="75sp"
        android:layout_height="50sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_lk"
        android:text="("
        android:layout_marginLeft="3dp"
        android:layout_width="75sp"
        android:layout_height="50sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_rk"
        android:text=")"
        android:layout_height="50sp"
        android:layout_width="75sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_ac"

        android:text="AC"
        android:layout_marginLeft="3dp"
        android:layout_height="50sp"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        android:background="#000000"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/button_min"
        android:textSize="30sp"
        android:layout_height="50sp"
        android:layout_gravity="right"
        android:layout_marginBottom="3dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:text="+/-"
        />
    <Button
        android:id="@+id/button_delete"
        android:textSize="30sp"
        android:layout_height="50sp"
        android:layout_gravity="right"
        android:layout_marginBottom="3dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:text="←"
/>
    <Button
        android:id="@+id/button_div"
        android:text="÷"
        android:layout_height="50sp"
        android:layout_marginLeft="3dp"
        android:layout_width="80dp"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        android:background="#4169E1"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/button_2X"
        android:text="2^x"
        android:textAllCaps="false"
        android:layout_marginLeft="3dp"
        android:layout_gravity="right|fill_horizontal"
        android:layout_height="50sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_xmult"
        android:text="x!"
        android:textAllCaps="false"
        android:layout_marginLeft="3dp"
        android:layout_width="75sp"
        android:layout_height="50sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_B"
        android:text="BIN"
        android:layout_width="75sp"
        android:layout_marginLeft="3dp"
        android:layout_height="50sp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_sin"
        android:text="sin"
        android:layout_width="75sp"
        android:layout_height="50sp"
        android:textAllCaps="false"
        android:layout_marginLeft="3dp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/button_1"
        android:text="1"
        android:layout_height="50sp"
        android:layout_marginLeft="3dp"
        android:background="#c0c0c0"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="30sp"
        />
    <Button
